gen_ray name=LK4-tirelines from=-0.8 -0.2 -1.35 to=-0.8 -1.07 -1.35; # left front;
gen_ray name=LK4-tirelines from=+0.8 -0.2 -1.35 to=+0.8 -1.07 -1.35; # right front;
gen_ray name=LK4-tirelines from=-0.8 -0.2 +1.20 to=-0.8 -1.07 +1.20; # left rear;
gen_ray name=LK4-tirelines from=+0.8 -0.2 +1.20 to=+0.8 -1.07 +1.20; # right rear;

macro_begin load-LK4-part;
    obj_resource
        name=NAME
        filename=models/SR/NAME.obj
        position=0 -0.05 -0.05
        rotation=0 180 0
        scale=1 1 1
        distances=DIST_MIN DIST_MAX
        is_small=0
        blend_mode=continuous
        alpha_distances=0 0 INFINITY INFINITY
        cull_faces_alpha=0
        occluded_type=color
        occluder_type=off
        occluded_by_black=0
        is_black=IS_BLACK
        aggregate_mode=off
        transformation_mode=all
        triangle_tangent_error_behavior=zero
        no_werror;

    # downsample name=NAME factor=10;
macro_end;

macro_begin load-LK4-wheel;
    obj_resource
        name=NAME
        filename=models/SR/NAME.obj
        position=0 0 0
        rotation=0 0 0
        scale=1 1 1
        distances=DIST_MIN DIST_MAX
        is_small=0
        blend_mode=off
        alpha_distances=0 0 INFINITY INFINITY
        occluded_type=color
        occluder_type=off
        occluded_by_black=0
        is_black=IS_BLACK
        aggregate_mode=off
        transformation_mode=all
        triangle_tangent_error_behavior=zero
        no_werror;

    # downsample name=NAME factor=10;
macro_end;

macro_begin load-LK4;
    macro_playback load-LK4-part  DIST_MIN:DIST_MIN DIST_MAX:DIST_MAX IS_BLACK:IS_BLACK NAME:LK4/LK4_body-DECIMATE;
    macro_playback load-LK4-part  DIST_MIN:DIST_MIN DIST_MAX:DIST_MAX IS_BLACK:IS_BLACK NAME:LK4/LK4_glass-DECIMATE;
    macro_playback load-LK4-part  DIST_MIN:DIST_MIN DIST_MAX:DIST_MAX IS_BLACK:IS_BLACK NAME:LK4/LK4_interior-DECIMATE;
    macro_playback load-LK4-wheel DIST_MIN:DIST_MIN DIST_MAX:DIST_MAX IS_BLACK:IS_BLACK NAME:LK4/LK4_wheel-DECIMATE;
macro_end;

macro_playback load-LK4 DIST_MIN:0   DIST_MAX:100  IS_BLACK:0 DECIMATE:;
macro_playback load-LK4 DIST_MIN:0   DIST_MAX:100  IS_BLACK:0 DECIMATE:_d3;
macro_playback load-LK4 DIST_MIN:100 DIST_MAX:1000 IS_BLACK:1 DECIMATE:_d1;
